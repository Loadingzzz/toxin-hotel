                                    .comment__top
                                        img.comment__top-img(src=require("./images/user-1.jpg") alt="Murad-logo")
                                        .comment__top-text
                                            p.comment__top-text_title Мурад Сарафанов
                                            p.comment__top-text_info 5 дней назад
                                    .comment__bot
