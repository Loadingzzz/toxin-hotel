                                .comment__form 
                                    .comment__top
                                        img.comment__top-img(src=require("./images/user-2.jpg") alt="Murad-logo")
                                        .comment__top-text
                                            p.comment__top-text_title Патрисия Стёклышкова
                                            p.comment__top-text_info Неделю назад
